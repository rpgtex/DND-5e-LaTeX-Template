#!/usr/bin/env bash
set -euo pipefail
IFS='$\n\t'

DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# See if there is a cached version of TL available
export PATH=/tmp/texlive/bin/x86_64-linux:$PATH
if ! command -v texlua > /dev/null; then
  # Obtain TeX Live
  wget http://mirror.ctan.org/systems/texlive/tlnet/install-tl-unx.tar.gz
  tar -xzf install-tl-unx.tar.gz
  cd install-tl-20*

  # Install a minimal system
  ./install-tl --profile="${DIR}/texlive.profile"

  cd ..
fi

# Just including texlua so the cache check above works
# Needed for any use of texlua even if not testing LuaTeX
tlmgr install luatex

#wget http://mirror.ctan.org/systems/texlive/tlnet/install-tl-unx.tar.gz
#tar -xf install-tl-unx.tar.gz
#cd install-tl-*
#./install-tl --profile="${DIR}/texlive.profile"

#export PATH="/tmp/texlive/bin/x86_64-linux:${PATH}"

# Core packages
tlmgr install dvips graphics graphics-def latex latex-bin latexmk

# Package dependencies
#   environ: required by tcolorbox
#   etex-pkg: provides e-TeX, transitive dependency
#   l3kernel: required by xparse
#   l3packages: xparse
#   ms: multitoc, ragged2e
#   oberdiek: luacolor
#   pgf: tikz
#   tools: array, calc, tabularx
#   trimspaces: required by environ?
tlmgr install \
  babel \
  colortbl \
  enumitem \
  environ \
  etex-pkg \
  etoolbox \
  fancyhdr \
  geometry \
  hang \
  ifluatex \
  ifxetex \
  keycommand \
  l3kernel \
  l3packages \
  microtype \
  ms \
  numprint \
  oberdiek \
  pgf \
  tcolorbox \
  titlesec \
  tocloft \
  tools \
  trimspaces \
  was \
  xcolor \
  xkeyval 

# Fonts required by package or dependencies
#tlmgr install \
  amsfonts \
  bookman \
  cm \
  courier \
  ec \
  latex-fonts \
  lm \
  opensans \
  psnfss

# Document dependencies
#tlmgr install \
  babel-english \
  lipsum \
  listings

# Keep no backups (not required, simply makes cache bigger)
tlmgr option -- autobackup 0

# Update the TL install but add nothing new
tlmgr update --self --all --no-auto-install
